<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="12dp"
    card:cardBackgroundColor="#32ADDA"
    card:cardCornerRadius="20dp"
    card:cardElevation="6dp"
    card:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/item_photo"
            android:background="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:contentDescription="@string/app_name"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/item_photo"
            android:fontFamily="@font/montague"
            android:text="name"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Constellation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_centerInParent="true"
            android:layout_marginStart="47dp"
            android:layout_marginTop="18dp"
            android:layout_toEndOf="@+id/item_photo"
            android:fontFamily="@font/montague"
            android:text="Constellation"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ArmorType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Constellation"
            android:layout_centerInParent="true"
            android:layout_marginStart="47dp"
            android:layout_marginTop="9dp"
            android:layout_toEndOf="@+id/item_photo"
            android:fontFamily="@font/montague"
            android:text="ArmorType"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_select"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ArmorType"
            android:background="@drawable/style_bord_textview"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@+id/item_photo"
            android:text="Select"
            android:textColor="@color/white" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>